<Page x:Class="SharpDeo.Sample.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="ButtonBase_OnClick"
                    Content="hello" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="Users_OnClick"
                    Content="users" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="User_OnClick"
                    Content="users" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="Create_OnClick"
                    Content="create" />
            <TextBox x:Name="dico"
                     Margin="24, 12"
                     Text="Poney" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="Dictionary_OnClick"
                    Content="Dictionary" />
            <TextBox x:Name="wolf"
                     Margin="24, 12"
                     Text="2+2" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="Math_OnClick"
                    Content="Math" />

            <TextBox x:Name="aiml"
                     Margin="24, 12"
                     Text="2+2" />
            <Button Margin="24, 12"
                    HorizontalAlignment="Stretch"
                    Click="aiml_OnClick"
                    Content="answer" />
        </ListView>
    </Grid>
</Page>
